<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#05EA0E"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="49dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="REPAIR"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tgl_konsul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:hint="Tanggal konsultasi(yyyy-mm-dd)"
                android:inputType="date"
                android:maxLength="15"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/topik_kerusakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Topik kerusakan"
                android:maxLines="1"
                android:maxLength="20"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/dskpsi_kerusakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ketik penjelasan sebab kerusakan"
                android:maxLength="100"
                android:maxLines="10"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:layout_height="143dp"
                android:layout_marginStart="84dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:contentDescription="TODO" />

            <Button
                android:id="@+id/plhGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:text="Pilih gambar kerusakan" />

            <Button
                android:id="@+id/hpsGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:text="Hapus gambar" />

            <Button
                android:id="@+id/btnBuatReparasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:text="Buat tanda reparasi" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>